                        android:textSize="14dp"/>

                    <com.padApp.view.DeviceStateView
                        android:id="@+id/device_ele"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:bigSliceCount="10"
                        app:maxValue="100"
                        app:radius="50dp"
                        app:ribbonWidth="15dp"
                        app:scaleTextSize="0dp"
                        app:unitText="%"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
