        <LinearLayout
            android:id="@+id/time_weather"
            android:layout_width="380dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_pattle_bg1"
            android:gravity="top|center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/time_layout"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="left"
                android:padding="10dp">

                <com.padApp.view.MyImageView
                    android:id="@+id/time_img"
                    android:layout_width="52dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="top|left"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/time" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/time_img"
                    android:text="时间"
                    android:textColor="@color/colorTableLine"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/time_t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/time_img"
                    android:text="8888/88/88"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/time_t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_toRightOf="@+id/time_img"
                    android:text="88:88:88"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/weather_layout"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginRight="10dp"
                android:gravity="left"
                android:padding="10dp">-

                <com.padApp.view.MyImageView
                    android:id="@+id/weather_img"
                    android:layout_width="52dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="top|left"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/weather" />

                <TextView
                    android:id="@+id/weather_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/weather_img"
                    android:text="天气"
                    android:textColor="@color/colorTableLine"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/weather_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/weather_img"
                    android:text="晴"
                    android:textColor="@color/colorWhite"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_toRightOf="@+id/weather_img"
                    android:text="-4°"
                    android:textColor="@color/colorWhite"
                    android:textSize="17dp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
