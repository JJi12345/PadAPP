                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/hight_img"
                    android:text="xxxxM"
                    android:textColor="@color/colorWhite"
                    android:textSize="17dp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
