                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_pattle_bg1">

                <TableLayout
                    android:id="@+id/anomalous_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:stretchColumns="0,1,2,3,4">

                </TableLayout>

            </ScrollView>
        </LinearLayout>

