            android:layout_height="240dp"
            android:layout_alignLeft="@+id/device_table"
            android:layout_alignBottom="@+id/risk_chart"
            android:layout_marginBottom="0dp"
            android:layout_toRightOf="@+id/map"
            android:gravity="top"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/color_bg_dark"
                android:gravity="left|center"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"

                    android:layout_marginRight="15dp"
                    android:background="@color/befor_title_dark" />

                <TextView
                    android:id="@+id/anomalous_table_title"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="0dp"
                    android:text="异常列表"
                    android:textColor="@color/colorLightGary"
                    android:textSize="20dp" />
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/colorWhite"
                android:stretchColumns="0,1,2,3,4">

                <TableRow
                    android:layout_width="317dp"
                    android:layout_height="20dp"
                    android:background="@color/color_pattle_bg1"
                    android:padding="1dp">

                    <TextView
                        android:layout_width="84dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="1dp"
                        android:background="@color/color_pattle_bg1"
