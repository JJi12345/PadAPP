                    android:layout_gravity="top|left"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/walk_img"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/run_ina" />

