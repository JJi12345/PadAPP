            <LinearLayout
                android:id="@+id/risk_chart_layout"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                android:background="@color/color_pattle_bg1" android:orientation="horizontal">

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/map"
            android:layout_width="470dp"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/criminal_table"
            android:layout_alignBottom="@+id/risk_chart"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/criminal_table"
            android:background="@color/color_pattle_bg1"
            android:orientation="vertical">

<!--            <TextView-->
<!--                android:id="@+id/longitude"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="30dp"-->
<!--                android:layout_marginTop="0dp"-->
