                android:layout_alignBottom="@+id/risk_chart"
                android:layout_width="470dp"
                android:layout_marginLeft="5dp"
                android:layout_height="match_parent"
                android:background="@color/colorDarkBlue1"
                android:orientation="vertical">
            <TextView android:id="@+id/longitude"
                      android:layout_width="match_parent"
                      android:layout_height="30dp"
                      android:text="longitude"
                      android:textSize="20dp"
                      android:textColor="@color/colorLightGary"
                      android:layout_marginTop="0dp"/>
            <TextView android:id="@+id/latitude"
                      android:layout_width="match_parent"
                      android:layout_height="30dp"
                      android:text="latitude"
                      android:textSize="20dp"
                      android:textColor="@color/colorLightGary"
                      android:layout_marginTop="0dp"/>
             <com.amap.api.maps.MapView
                            android:id="@+id/map_view"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorDarkBlue1"/>

        </LinearLayout>
        <LinearLayout
                android:id="@+id/device_table"
                android:layout_width="359dp"
                android:layout_height="240dp"
                android:layout_toRightOf="@+id/map"
                android:layout_alignBottom="@+id/criminal_table"
                android:gravity="top"
                android:layout_marginLeft="5dp"
                android:orientation="vertical" android:background="@color/colorDarkBlue1">
            <TextView
                    android:id="@+id/device_table_title"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="设备信息"
                    android:textSize="20dp"
                    android:textColor="@color/colorLightGary"
                    android:layout_marginTop="0dp"
            />
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="horizontal"
            >
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                              android:orientation="vertical"
                              android:layout_marginLeft="5dp"
                              android:layout_marginRight="5dp" android:gravity="center|center_horizontal">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="内存"
                              android:textSize="14dp"
                              android:textColor="@color/colorLightGary"
                              android:layout_marginTop="5dp" android:layout_gravity="center"
                              android:layout_marginBottom="10dp"/>
                    <com.padApp.view.DeviceStateView
                            android:id="@+id/device_storage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:bigSliceCount="10"
                            app:unitText="%"
                            app:maxValue="100"
                            app:scaleTextSize="0dp"
                            app:radius="50dp"
                            app:ribbonWidth="15dp"/>

                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                              android:orientation="vertical"
                              android:layout_marginLeft="5dp"
                              android:layout_marginRight="5dp" android:gravity="center|center_horizontal">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="CPU"
                              android:textSize="14dp"
                              android:textColor="@color/colorLightGary"
                              android:layout_marginTop="5dp" android:layout_gravity="center"
                              android:layout_marginBottom="10dp"/>
                    <com.padApp.view.DeviceStateView
                            android:id="@+id/device_cpu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:bigSliceCount="10"
                            app:unitText="%"
                            app:maxValue="100"
                            app:scaleTextSize="0dp"
                            app:radius="50dp"
                            app:ribbonWidth="15dp"/>

                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                              android:orientation="vertical"
                              android:layout_marginLeft="5dp"
                              android:layout_marginRight="5dp"
                              android:gravity="center|center_horizontal">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="耗电量"
                              android:textSize="14dp"
                              android:textColor="@color/colorLightGary"
                              android:layout_marginTop="5dp" android:layout_gravity="center"
                              android:layout_marginBottom="10dp"/>
                    <com.padApp.view.DeviceStateView
                            android:id="@+id/device_ele"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:bigSliceCount="10"
                            app:unitText="%"
                            app:maxValue="100"
                            app:scaleTextSize="0dp"
                            app:radius="50dp"
                            app:ribbonWidth="15dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="359dp"
            android:layout_height="240dp"
            android:layout_toRightOf="@+id/map"
            android:layout_alignBottom="@+id/risk_chart"
            android:layout_alignLeft="@+id/device_table"
            android:gravity="top"
            android:layout_marginBottom="0dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/anomalous_table_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="异常列表"
                android:textSize="20dp"
                android:textColor="@color/colorLightGary"
                android:layout_marginTop="0dp"
            />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/colorWhite"
                android:stretchColumns="0,1,2,3,4"
            >
                <TableRow
                    android:layout_width="317dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:background="@color/colorDarkBlue1">

                    <TextView
                        android:layout_width="84dp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorDarkBlue1"
                        android:layout_marginRight="1dp"
                        android:gravity="center"
                        android:text="时间" android:textColor="@color/colorLightGary"/>
                    <TextView
                        android:layout_width="68dp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorDarkBlue1"
                        android:layout_marginRight="1dp"
                        android:gravity="center"
                        android:text="犯人" android:textColor="@color/colorLightGary"/>
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorDarkBlue1"
                        android:layout_marginRight="1dp"
                        android:gravity="center"
                        android:text="车辆" android:textColor="@color/colorLightGary"/>
                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorDarkBlue1"
                        android:layout_marginRight="1dp"
                        android:gravity="center"
                        android:text="状态" android:textColor="@color/colorLightGary"/>
                    <TextView
                        android:layout_width="38dp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorDarkBlue1"
                        android:gravity="center"
                        android:text="风险值" android:textColor="@color/colorLightGary"/>

                </TableRow>
            </TableLayout>

            <ScrollView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="191dp" android:background="@color/colorDarkBlue1">
                <TableLayout
                    android:id="@+id/anomalous_table"
                    android:gravity="top"
                    android:stretchColumns="0,1,2,3,4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </TableLayout>

            </ScrollView>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>